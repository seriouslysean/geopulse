{
  "name": "geopulse-app",
  "version": "1.0.0",
  "description": "Get a pulse of what's happening at your current location.",
  "author": "Sean Kennedy <sean@codeserious.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn build && NODE_ENV=development PORT=3000 concurrently \"yarn dev:server\" \"yarn dev:build-server\" \"yarn dev:build-client\"",
    "dev:server": "nodemon --watch server/build --exec \"yarn start\"",
    "dev:build-server": "yarn build:server --watch",
    "dev:build-client": "yarn build:client --watch",
    "build": "yarn build:server && yarn build:client",
    "build:server": "webpack --config config/webpack.server.js",
    "build:client": "webpack --config config/webpack.client.js",
    "start": "node server.js",
    "test": "jest --colors",
    "lint": "eslint **/*.js --ignore-pattern node_modules/",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "autoprefixer": "^7.2.2",
    "axios": "0.16.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "compression": "^1.7.1",
    "concurrently": "3.5.0",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint-config-airbnb": "^16.1.0",
    "express": "4.15.4",
    "external-ip": "^1.3.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "include-media": "^1.4.9",
    "lodash": "^4.17.4",
    "node-sass": "^4.7.2",
    "node-twitter": "^0.5.3",
    "nodemon": "1.12.0",
    "normalize.css": "^7.0.0",
    "postcss-loader": "^2.0.9",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-ga": "^2.3.5",
    "react-google-maps": "^9.4.2",
    "react-helmet": "5.2.0",
    "react-redux": "5.0.6",
    "react-router": "^4.2.0",
    "react-router-config": "1.0.0-beta.4",
    "react-router-dom": "4.2.2",
    "redux": "3.7.2",
    "redux-thunk": "2.2.0",
    "sass-loader": "^6.0.6",
    "serialize-javascript": "1.4.0",
    "webpack": "3.5.6",
    "webpack-dev-server": "2.8.2",
    "webpack-merge": "4.1.0",
    "webpack-node-externals": "1.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.13.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "localtunnel": "^1.8.3",
    "react-test-renderer": "^16.2.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/jest.setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "<rootDir>/client/tests/**/*.test.js"
    ]
  }
}
